
<h1>Edit a Contact</h1>
<form action='/contacts/<%= @contacts.id %>' method='post'>
  <input type='hidden' name='_method' value='put'>
  <label for="first_name"> First Name :</label>
  <input id="first_name" type='text' name='first_name' value='<%= @contacts.first_name %>'>
  <label for="last_name"> Last Name :</label>
  <input id="last_name" type='text' name='last_name' value='<%= @contacts.last_name %>'>
  <label for="email"> Email :</label>
  <input id="email" type='text' name='email' value='<%= @contacts.email %>'>
  <label for="note"> Note :</label>
  <input id="note" type='text' name='note' value='<%= @contacts.note %>'>
  <label for="submit"> Click To:<label>
  <input id="submit" type='submit' value='Save changes'>
</form>
